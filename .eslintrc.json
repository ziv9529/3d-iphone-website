{
  "extends": [
    "standard",
    "plugin:react/recommended",
    "plugin:tailwindcss/recommended",
    "plugin:react/jsx-runtime",
    "prettier"
  ],
  "plugins": ["react-refresh", "@react-three"],
  "rules": {
    "tailwindcss/classnames-order": "off",
    "max-len": [2, 250],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "object-curly-newline": 0
  }
}
